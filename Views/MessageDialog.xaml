<Window x:Class="element_profiles.Views.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:element_profiles.Views"
        mc:Ignorable="d"
        ThemeMode="System"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="{Binding Title}" Height="190" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Button x:Name="ButtonOk" Content="Ok" Margin="0,0,10,10" HorizontalAlignment="Right" Width="79" Height="42" VerticalAlignment="Bottom" Click="ButtonOk_Click"/>
        <Image HorizontalAlignment="Left" Margin="10,17,0,0" Width="57" Source="/Assets/icons8-error-96.png" Height="55" VerticalAlignment="Top"/>

        <GroupBox Header="{Binding WindowTitle}" Margin="79,10,10,70">
            <TextBlock x:Name="TextBlockMessage" Margin="0,0,-2,0" TextWrapping="Wrap" Text="{Binding Message}" VerticalAlignment="Top" Height="86"/>
        </GroupBox>

    </Grid>
</Window>
